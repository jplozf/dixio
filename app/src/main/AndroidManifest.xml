<manifest package="fr.ligorax.Dixio"
          xmlns:android="http://schemas.android.com/apk/res/android">
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="21"/>

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="fr.ligorax.Dixio.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="fr.ligorax.Dixio.PrefsActivity"
            android:label="@string/lbl_menu_prefs"
            android:parentActivityName="fr.ligorax.Dixio.MainActivity">
        </activity>
    </application>

</manifest>
